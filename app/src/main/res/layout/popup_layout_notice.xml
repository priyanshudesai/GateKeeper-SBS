<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:id="@+id/notice_head_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Notice for Maintenance Due"
        android:textStyle="bold"
        android:layout_margin="@dimen/_20sdp"/>
    <TextView
        android:id="@+id/notice_desc_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Defaulters post Oct 12th will be levied a final of 10%."
        android:textSize="13sp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"

        />
    <ImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        app:srcCompat="@drawable/icon_account"
        android:alpha="0.9"

        android:layout_marginLeft="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/notice_add_name_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="K.L.Mokariya"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/_40sdp"

        />
    <TextView
        android:id="@+id/notice_time_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14 min.ago,11:20 AM"
        android:textSize="10sp"
        android:layout_marginLeft="@dimen/_160sdp"

        />

</LinearLayout>